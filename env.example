# Voice Agent Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Voice Agent Production
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Database Configuration
DOCUMENTDB_HOST=mongodb
DOCUMENTDB_PORT=27017
DOCUMENTDB_DATABASE=voice_agent
DOCUMENTDB_USERNAME=admin
DOCUMENTDB_PASSWORD=password123
DOCUMENTDB_SSL=false

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# AI Service API Keys
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# LYZR Configuration
LYZR_API_BASE_URL=https://agent-prod.studio.lyzr.ai
LYZR_CONVERSATION_AGENT_ID=your_lyzr_conversation_agent_id_here
LYZR_SUMMARY_AGENT_ID=your_lyzr_summary_agent_id_here
LYZR_USER_API_KEY=your_lyzr_user_api_key_here
LYZR_API_KEY=your_lyzr_api_key_here

# Voice Settings
DEFAULT_VOICE_ID=xtENCNNHEgtE8xBjLMt0
VOICE_STABILITY=0.55
VOICE_SIMILARITY_BOOST=0.70
VOICE_STYLE=0.2
VOICE_SPEED=0.87
USE_SPEAKER_BOOST=true

# STT Settings
STT_MODEL=nova
STT_LANGUAGE=en-US

# Performance Settings
MAX_CONCURRENT_CALLS=30
CALL_TIMEOUT_SECONDS=300
MAX_CALL_ATTEMPTS=6
CACHE_TTL_SECONDS=300
SESSION_CACHE_TTL=1800
WEBHOOK_TIMEOUT=10

# Business Hours
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=17
BUSINESS_DAYS=1,2,3,4,5
BUSINESS_TIMEZONE=America/New_York

# Base URL for webhooks
BASE_URL=http://localhost:8000
